    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal form-label-left">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Input.NombreCompleto" class="control-label"></label>
            <input asp-for="Input.NombreCompleto" class="form-control" />
            <span asp-validation-for="Input.NombreCompleto" class="text-danger"></span>
