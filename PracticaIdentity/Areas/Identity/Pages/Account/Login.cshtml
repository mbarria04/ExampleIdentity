@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Iniciar sesión";
}


<!-- Bootstrap CSS -->
<link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12" style="max-width: 720px;">
            <div class="card shadow-sm overflow-hidden" style="border-radius: 15px;">
                <div class="row g-0">
                    <!-- Imagen a la izquierda (oculta en móvil) -->
                    <div class="col-12 col-md-6 d-none d-md-block">
                        <img src="~/images/login.webp"
                             alt="Imagen decorativa de inicio de sesión"
                             class="img-fluid w-100"
                             style="height: 100%; min-height: 420px; object-fit: cover; border-top-left-radius: 15px; border-bottom-left-radius: 15px;" />
                    </div>

                    <!-- Login a la derecha -->
                    <div class="col-12 col-md-6 p-3">
                        <h4 class="text-center mb-3">@ViewData["Title"]</h4>
                        <form id="account" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

                            <div class="mb-2">

                                <label asp-for="Input.Email" class="form-label fw-normal text-muted small">
                                    Correo electrónico
                                </label>
                                <input asp-for="Input.Email" class="form-control form-control-sm" placeholder="correo@ejemplo.com" autocomplete="email" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>

                            </div>

                            <div class="mb-2">

                                <label asp-for="Input.Password" class="form-label fw-normal text-muted small">
                                    Contraseña
                                </label>
                                <input asp-for="Input.Password" class="form-control form-control-sm" type="password" placeholder="********" autocomplete="current-password" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>

                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe"></label>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary w-100">Ingresar</button>

                            <hr class="my-3" />



                            <div class="text-center mt-3 enlaces-login">
                                <a asp-page="./ForgotPassword" class="text-muted small text-decoration-none">
                                    ¿Olvidaste tu contraseña?
                                </a>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted small text-decoration-none">
                                    Crear una cuenta nueva
                                </a>
                                <a asp-page="./ResendEmailConfirmation" class="text-muted small text-decoration-none">
                                    Reenviar correo de confirmación
                                </a>
                            </div>

                            <style>
                                .enlaces-login a {
                                    display: block;
                                    margin-bottom: .25rem;
                                }
                            </style>


                        </form>
                    </div>
                </div>
            </div>

            <!-- Imagen en móvil (opcional) -->
            <div class="d-md-none mt-3">
                <img src="~/images/login.webp"
                     alt="Imagen decorativa de inicio de sesión"
                     class="img-fluid w-100 rounded-3"
                     style="object-fit: cover; aspect-ratio: 16/9;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


