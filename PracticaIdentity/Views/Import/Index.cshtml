@using CapaData.DTOs
@model IEnumerable<TblProducto>

@{
    ViewData["Title"] = "Importar Excel";
}
<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">Cargar Excel de Precios</div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file" class="form-label">Archivo Excel (.xlsx) con columnas: Sku, Nombre, PrecioBase</label>
                        <input type="file" class="form-control" id="file" name="file" accept=".xlsx" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Procesar</button>
                    <a class="btn btn-outline-secondary" href="/products">Ver productos</a>
                </form>
                <div class="mt-3">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                </div>
                <div class="mt-3">
                    <p><a href="/uploads/plantilla.xlsx" class="link-primary">Descargar plantilla</a></p>
                    <p><a href="/uploads/productos_demo.xlsx" class="link-primary">Descargar datos de prueba (500 filas)</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">Productos en BD</div>
            <div class="card-body">
                <table id="tblProducts" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Nombre</th>
                            <th>Precio Base</th>
                            <th>Precio Actual</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Sku</td>
                                <td>@p.Name</td>
                                <td>@p.BasePrice.ToString("C")</td>
                                <td>@p.CurrentPrice.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function(){ $('#tblProducts').DataTable({ pageLength: 10, lengthMenu: [10,25,50,100] }); });
    </script>
}

