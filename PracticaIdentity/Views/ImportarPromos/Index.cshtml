
@using CapaData.DTOs
@model IEnumerable<TblPromocion>

@{
    ViewData["Title"] = "Importar Promociones";
}

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">Cargar Excel de Promociones</div>
            <div class="card-body">
                Index
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="file" class="form-label">
                            Archivo Excel (.xlsx) con columnas:
                            <code>ProductSku</code>, <code>DiscountPercent</code>, <code>StartUtc</code>, <code>EndUtc</code>
                        </label>
                        <input type="file" class="form-control" id="file" name="file" accept=".xlsx" required />
                        <small class="text-muted d-block mt-1">
                            Fechas en UTC, formato ISO: <code>2025-01-15T12:00:00Z</code>
                        </small>
                    </div>
                    <button type="submit" class="btn btn-primary">Procesar</button>
                    IndexVer promociones</a>
                </form>

                <div class="mt-3">
                    @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }
                    @if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">Promociones en BD</div>
            <div class="card-body">
                <table id="tblPromos" class="table table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>% Descuento</th>
                            <th>Inicio (UTC)</th>
                            <th>Fin (UTC)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model ?? Enumerable.Empty<TblPromocion>())
                        {
                            <tr>
                                <td>@p.ProductSku</td>
                                <td>@p.DiscountPercent.ToString("0.##")%</td>
                                <td>@p.StartUtc.ToString("u")</td>
                                <td>@p.EndUtc.ToString("u")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
