@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Gestión de Roles";
}

<h1>Gestión de Roles</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-4">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-4">@TempData["Error"]</div>
}



<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Mantenimiento de Roles</h5>

                <!-- Botón para crear un nuevo rol -->
                <button class="btn btn-primary mb-4" data-toggle="modal" data-target="#modalCrearRol">
                    <i class="fa fa-plus-circle"></i> Crear Nuevo Rol
                </button>

            </div>
            <div id="card-body-titular" class="card-body collapse show">
                <table id="tablaRoles" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>
                                    <button class="btn btn-warning btn-sm"
                                            data-toggle="modal"
                                            data-target="#modalEditarRol"
                                            data-id="@role.Id"
                                            data-name="@role.Name">
                                        <i class="fa fa-pencil"></i> Editar
                                    </button>

                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="roleId" value="@role.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar este rol?')">
                                            <i class="fa fa-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear -->
<div class="modal fade" id="modalCrearRol" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Create" method="post">
            <div class="modal-content">
                <div class="modal-header"><h5>Crear Rol</h5></div>
                <div class="modal-body">
                    <input type="text" name="roleName" class="form-control" placeholder="Nombre del rol" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="modalEditarRol" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Edit" method="post">
            <div class="modal-content">
                <div class="modal-header"><h5>Editar Rol</h5></div>
                <div class="modal-body">
                    <input type="hidden" id="editRoleId" name="id" />
                    <input type="text" id="editRoleName" name="roleName" class="form-control" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar DataTable
            $('#tablaRoles').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });

            // Pasar datos al modal de edición
            $('#modalEditarRol').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');

                $('#editRoleId').val(id);
                $('#editRoleName').val(name);
            });
        });
    </script>
}